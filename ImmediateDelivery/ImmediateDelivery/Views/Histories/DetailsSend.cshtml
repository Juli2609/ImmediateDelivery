@model ImmediateDelivery.Data.Entities.Send

@{
    ViewData["Title"] = "DetailsSend";
}

<flash dismissable="true" />

<h1>Detalles</h1>

<div>
    <partial name="_HistoryDetails" />
</div>

<div>
    <a asp-action="Confirm" asp-route-id="@Model?.Id" class="btn btn-outline-primary">Confirmar</a>
    <a asp-action="Offcast" asp-route-id="@Model?.Id" class="btn btn-outline-secondary">Rechazar</a>
    <a asp-action="PickedUp" asp-route-id="@Model?.Id" class="btn btn-outline-warning">Recoger</a>
    <a asp-action="InRute" asp-route-id="@Model?.Id" class="btn btn-outline-warning">En Ruta</a>
    <a asp-action="Delivered" asp-route-id="@Model?.Id" class="btn btn-outline-warning">Entregar</a>
    <a asp-action="Cancel" asp-route-id="@Model?.Id" class="btn btn-outline-danger">Cancelar</a>
    <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
</div>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<hr />

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Paquetes</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.SendDetails.FirstOrDefault().Package.PackageType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SendDetails.FirstOrDefault().Package.Contain)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SendDetails.FirstOrDefault().Package.FullNameRecipient)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SendDetails.FirstOrDefault().Package.AddressRecipient)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SendDetails.FirstOrDefault().Package.PhoneNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SendDetails.FirstOrDefault().Remarks)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.SendDetails)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Package.PackageType)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Package.Contain)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Package.FullNameRecipient)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Package.AddressRecipient)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Package.PhoneNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Remarks)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#MyTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
            },
            "aLengthMenu": [
                [25, 50, 100, 200, -1],
                [25, 50, 100, 200, "Todos"]
            ]
        });
    });
</script>
}
