@model IEnumerable<ImmediateDelivery.Data.Entities.Vehicle>

<flash dismissable="true" />

<table class="table table-striped table-responsive-md table-bordered smfont" id="VehiclesTable">
     <colgroup>
     
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Plaque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleType.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrandVehicle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("Create", "Vehicles", new { }, Context.Request.Scheme)' , 'Nuevo Vehículo')" class="btn btn-sm btn-primary text-white"><i class="fa fa-plus-circle"></i> Vehículo</a>
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                <a asp-action="Details" asp-controller="Vehicles" asp-route-Id="@item.Id">@Html.DisplayFor(modelItem => item.Plaque)</a>
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleType.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandVehicle)
                </td>
                   <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("Edit", "Vehicles", new { id = item.Id }, Context.Request.Scheme)' , 'Actualizar Vehículo')" class="btn btn-sm btn-warning"><i class="fa fa-pencil-alt"></i> </a>
                    <button data-id="@item.Id" class="btn btn-sm btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa fa-trash"></i></button>
                </td>

            </tr>
        }
    </tbody>
</table>



